<%= bootstrap_form_for(@address) do |f| %>
  <%= f.text_field :street_name %>
  <%= f.text_field :city %>
  <%= f.text_field :state %>
  <%= f.text_field :zip_5, required: true %>
  <%= f.submit "Validate Address" %>
<% end %>
<script>
function validatearticleFunction() {
  $(“#new_address”).validate({
    debug: false,
    rules: {
      “article[zip_code]”: { minlength: 5, maxlength: 5  }
           }
        })
      }
$(document).ready(validatearticleFunction);
$(document).on(‘page:load’, validatearticleFunction);
</script>
